<body>
    <div class="container">
        <table class="table table-striped">
            <tr>
                <th>Nome</th>
                <th>Idade</th>
            </tr>
        <%for(const element of pessoas){ 
        %>
            <tr>
                <td><%= element.nome%></td>
                <td><%= element.idade%></td>
            </tr>
        <%}%>
        </table>
    </div>
    <%- include("../partials/footer.ejs")%> 
</div>
</body>
</html>